<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUpload"
            android:layout_width="100dp"
            android:layout_margin="30dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type"/>

        <Spinner
                android:id="@+id/sprType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        <com.maxlab.receiptapp.component.TopBotField
                android:id="@+id/tbf_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:header= "@string/food"/>

        <com.maxlab.receiptapp.component.TopBotField
                android:id="@+id/tbf_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:header="@string/description"/>


        <com.maxlab.receiptapp.component.TopBotField
                android:id="@+id/tbf_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:header="@string/ingredient"/>

        <com.maxlab.receiptapp.component.TopBotField
                android:id="@+id/tbf_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:header="@string/step"/>


    </LinearLayout>






</LinearLayout>